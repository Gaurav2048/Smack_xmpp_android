<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/participant_send_image"
        android:src="@drawable/ic_user"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"



        />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/participant_send_image"
        android:id="@+id/text_scope"
        app:cardCornerRadius="6dp"
        android:elevation="3dp"
        app:cardBackgroundColor="#fff"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loreum"
            android:id="@+id/message_space"
            android:textColor="#838282"
            android:layout_marginRight="14dp"
            />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/time_send"
    android:layout_gravity="bottom"
    android:gravity="right"
    android:layout_marginRight="19dp"
    android:text="3.00 am"
    android:paddingTop="5dp"
    android:textColor="#000"

    />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>